<%= render "devise/shared/error_messages", resource: resource %>

<div class="px-5">
  <h1><%= t('.sign_up') %></h1>
  <h2 class="mt-3 text-sm font-normal text-blue-200">
    <%= t('common.or') %>
    <%= render(ButtonComponent.new(tag: :a, href: new_session_path(resource_name), scheme: :link, additional_classes: 'pl-0 pr-0 !text-white !text-sm')) do %>
      <%= 'â†’ ' + t('devise.sessions.new.sign_in') %>
    <% end %>
  </h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="mt-8 mb-3">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="my-3">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name %>
    </div>

    <div class="my-3">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name %>
    </div>

    <div class="my-3">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="my-3">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="mt-8 mb-3 flex justify-end">
      <%= f.submit t('.sign_up'), class: 'primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
