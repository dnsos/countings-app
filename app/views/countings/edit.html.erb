<% content_for(:header_slot) {
    render ButtonComponent.new(scheme: :link, tag: :a, href: counting_path, class: 'p-0') do
      "← #{t('countings.cancel.title')}"
    end
  }
%>

<% content_for(:html_title) { t('countings.edit.title') + ' | ' + @counting.title } %>

<div class="mt-8 px-5">
  <h1><%= t('countings.edit.title') %></h1>

  <%= render "form", counting: @counting %>

  <%= render(ButtonComponent.new(type: :submit, path: counting_path(@counting), scheme: :danger, method: :delete, form: { data: { turbo_confirm: t('countings.destroy.are_you_sure') } })) do %>
    <%= t('countings.destroy.explicitly') %>
  <% end %>
</div>
