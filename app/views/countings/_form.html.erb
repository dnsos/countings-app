<%= form_with(model: counting, class: "contents") do |form| %>
  <div class="mt-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: "#{counting.errors[:title].any? ? 'border-red-500' : ''}" %>

    <% if counting.errors[:title].any? %>
      <ul class="text-red-500 mt-1">
        <% counting.errors[:title].each do |error_message| %>
        <li>
          <%= t('activerecord.attributes.counting.title') %>&nbsp;<%= error_message %>
        </li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div class="mt-5">
    <%= form.label :description_short %>
    <%= form.text_area :description_short, rows: 4, class: "#{counting.errors[:description_short].any? ? 'border-red-500' : ''}" %>
  </div>

  <div class="mt-5">
    <%= form.label :starts_at %>
    <%= form.datetime_field :starts_at, class: "#{counting.errors[:starts_at].any? ? 'border-red-500' : ''}" %>

    <% if counting.errors[:starts_at].any? %>
      <ul class="text-red-500 mt-1">
        <% counting.errors[:starts_at].each do |error_message| %>
        <li>
          <%= t('activerecord.attributes.counting.starts_at') %>&nbsp;<%= error_message %>
        </li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div class="my-5">
    <%= form.label :ends_at %>
    <%= form.datetime_field :ends_at, class: "#{counting.errors[:ends_at].any? ? 'border-red-500' : ''}" %>

    <% if counting.errors[:ends_at].any? %>
      <ul class="text-red-500 mt-1">
        <% counting.errors[:ends_at].each do |error_message| %>
        <li>
          <%= t('activerecord.attributes.counting.ends_at') %>&nbsp;<%= error_message %>
        </li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div class="inline">
    <%= form.submit class: "" %>
  </div>
<% end %>
