<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @counting %>

    <% if user_signed_in? and current_user.admin? %>
      <%= link_to I18n.t('views.counting.edit.title'), edit_counting_path(@counting), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <div class="inline-block ml-2">
        <%= button_to I18n.t('views.counting.destroy.title'), counting_path(@counting), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
      </div>
    <% end %>
    <%= link_to I18n.t('views.counting.back.title'), countings_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
