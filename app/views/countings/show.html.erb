<% content_for(:html_title) { @counting.title } %>

<div class="w-full">
  <%= link_to '← ' + t('views.counting.back.title'), countings_path, class: 'no-underline mx-5 text-white hover:text-yellow-200' %>

  <article class="mt-12">
    <header class="px-5 pb-8 bg-gradient-to-t from-blue-700 to-blue-900">
      <h1 class="text-yellow-300 mt-4"><%= @counting.title %></h1>
      <p class="mt-4 text-sm text-white">
        <%= @counting.description_short %>
      </p>
    </header>

    <main class="px-5 pt-8 border-t border-dotted border-blue-200">
      <%= @counting.description_long %>
    </main>

    <% if user_signed_in? and current_user.admin? %>
      <footer class="mt-12 px-5 pt-8 border-t border-dotted border-blue-200 flex justify-between">
        <%= button_to I18n.t('views.counting.destroy.title'), counting_path(@counting), method: :delete, class: 'danger' %>
        <%= link_to I18n.t('views.counting.edit.title'), edit_counting_path(@counting), class: "secondary" %>
      </footer>
    <% end %>
  </article>
</div>
