<% content_for(:html_title) { @counting.title } %>

<div class="w-full">
  <%= render(ButtonComponent.new(tag: :a, href: countings_path, scheme: :link, additional_classes: 'mx-5 pl-0 pr-0')) do %>
    <%= "← #{t('countings.back.title')}" %>
  <% end %>

  <article class="mt-12">
    <header class="px-5 pb-8 bg-gradient-to-t from-blue-900 to-blue-900">
      <h1 class="text-yellow-300 mt-4"><%= @counting.title %></h1>
      <p class="mt-4 text-sm text-white">
        <%= @counting.description_short %>
      </p>
    </header>

    <main class="px-5 pt-8">
      <%= @counting.description_long %>
    </main>

    <% if user_signed_in? and current_user.admin? %>
      <footer class="mt-12 px-5 pt-8 border-t border-blue-300">
        <h3 class='w-full'><%= t('common.admin_area') %></h3>
        <div class="mt-6 flex justify-between flex-wrap gap-4">
          <div class="">
            <%= render(ButtonComponent.new(tag: :a, href: counting_people_path(@counting))) do %>
              <%= t('people.index.title') %>
            <% end %>
          </div>
          <div class="flex justify-end gap-4">
            <%= render(ButtonComponent.new(type: :submit, path: counting_path(@counting), scheme: :danger, method: :delete)) do %>
              <%= t('countings.destroy.explicitly') %>
            <% end %>
            <%= render(ButtonComponent.new(tag: :a, href: edit_counting_path(@counting))) do %>
              <%= t('countings.edit.explicitly') %>
            <% end %>
          </div>
        </div>
      </footer>
    <% end %>
  </article>
</div>
