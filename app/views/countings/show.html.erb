<% content_for(:html_title) { @counting.title } %>

<div class="w-full">
  <%= link_to 'â† ' + t('views.counting.back.title'), countings_path, class: 'no-underline mx-5 text-white hover:text-yellow-200' %>

  <article class="mt-12">
    <header class="px-5 pb-8 bg-gradient-to-t from-blue-900 to-blue-900">
      <h1 class="text-yellow-300 mt-4"><%= @counting.title %></h1>
      <p class="mt-4 text-sm text-white">
        <%= @counting.description_short %>
      </p>
    </header>

    <main class="px-5 pt-8">
      <%= @counting.description_long %>
    </main>

    <% if user_signed_in? and current_user.admin? %>
      <footer class="mt-12 px-5 pt-8 border-t border-blue-300">
        <h3 class='w-full'><%= t('common.admin_area') %></h3>
        <div class="mt-6 flex justify-between flex-wrap gap-4">
          <div class="">
            <%= link_to t('views.person.index.title'), counting_people_path(@counting), class: 'secondary' %>
          </div>
          <div class="flex justify-end gap-4">
            <%= button_to I18n.t('views.counting.destroy.explicitly'), counting_path(@counting), method: :delete, class: 'danger' %>
            <%= link_to I18n.t('views.counting.edit.explicitly'), edit_counting_path(@counting), class: "secondary" %>
          </div>
        </div>
      </footer>
    <% end %>
  </article>
</div>
