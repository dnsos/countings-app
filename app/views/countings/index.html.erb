<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= t('activerecord.models.counting.other').capitalize %></h1>
    <% if user_signed_in? and current_user.admin? %>
      <%= link_to I18n.t('views.counting.new.title'), new_counting_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    <% end %>
  </div>

  <div id="countings" class="min-w-full">
    <%= render @countings %>
  </div>
</div>
