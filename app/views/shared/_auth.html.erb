<% if user_signed_in? %>
  <%= render(ButtonComponent.new(tag: :a, href: profile_path, scheme: :link, size: :small)) do %>
    <%= t('common.profile') %>
  <% end %>
<% else %>
  <%= render(ButtonComponent.new(tag: :a, href: new_user_session_path, scheme: :link, size: :small)) do %>
    <%= t('devise.sessions.new.sign_in') %>
  <% end %>
<% end %>