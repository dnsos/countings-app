<% type = 'notice' if local_assigns[:type].nil? %>

<% color_classes = type == 'alert' ? 'text-white bg-danger' : 'text-blue-900 bg-yellow-300' %>

<li
  class="px-4 py-2 font-medium rounded-md shadow-md <%= color_classes %>"
  data-turbo-cache="false"
  data-controller="flash"
>
  <%= message %>
</li>