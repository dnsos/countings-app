  style="height: calc(100vh - 56px);"
>
  <div
    id="map"
    class="w-full h-full bg-blue-300"
  >
  </div>

  <div class="h-full px-5 pb-5 overflow-scroll">
    <h1 class="mt-4 text-lg font-bold"><%= t('countees.new.title') %></h1>
    <%= render "form", countee: @countee %>
  </div>
</div>
