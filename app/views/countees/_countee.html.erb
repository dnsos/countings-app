<div id="<%= dom_id countee %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Counting:</strong>
    <%= countee.counting_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">District:</strong>
    <%= countee.district_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Gender:</strong>
    <%= countee.gender_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Age group:</strong>
    <%= countee.age_group_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Pet count:</strong>
    <%= countee.pet_count %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this countee", counting_countee_path(@counting, countee), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this countee', edit_counting_countee_path(@counting, countee), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
