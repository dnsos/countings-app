<div class="<%= @args[:class] %>">
  <time class="text-blue-300">
    <%= l(@created_at, format: :long) %>
  </time>
  <h3 class="mt-2 font-bold text-2xl">
    <%= @counting_area %>
  </h3>
  <ul class="mt-2 grid grid-cols-1 gap-0.5">
    <% if @gender %>
      <li><strong><%= I18n.t('activerecord.attributes.countee.gender_id') %>:</strong> <%= @gender %></li>
    <% end %>
    <% if @age_group %>
      <li><strong><%= I18n.t('activerecord.attributes.countee.age_group_id') %>:</strong> <%= @age_group %></li>
    <% end %>
    <% if @pet_count %>
      <li><strong><%= I18n.t('activerecord.attributes.countee.pet_count') %>:</strong> <%= @pet_count %></li>
    <% end %>
  </ul>
</div>